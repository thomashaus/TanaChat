# Test Environment Configuration
# Copy this to .env.local and modify as needed

# Local Development URLs
LOCAL_FRONTEND_URL=http://localhost:5173
LOCAL_API_URL=http://localhost:8000
LOCAL_MCP_URL=http://localhost:8000/mcp

# Production URLs
PRODUCTION_FRONTEND_URL=https://tanachat.ai
PRODUCTION_API_URL=https://mcp.tanachat.ai
PRODUCTION_MCP_URL=https://mcp.tanachat.ai/mcp

# Test Configuration
TEST_TIMEOUT=30
PERFORMANCE_THRESHOLD_SLOW=5.0
PERFORMANCE_THRESHOLD_FAST=2.0

# Security Settings
VERIFY_SSL=true
FOLLOW_REDIRECTS=true

# Reporting
REPORT_DIR=temp
DETAILED_REPORTING=true