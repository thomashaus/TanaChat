{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Tana Intermediate Format",
  "description": "Schema for Tana Intermediate Format (TIF) files",
  "type": "object",
  "required": ["version", "nodes"],
  "properties": {
    "version": {
      "type": "string",
      "enum": ["TanaIntermediateFile V0.1"],
      "description": "TIF file version"
    },
    "summary": {
      "type": "object",
      "description": "Summary statistics about the file",
      "properties": {
        "leafNodes": {
          "type": "integer",
          "minimum": 0
        },
        "topLevelNodes": {
          "type": "integer",
          "minimum": 0
        },
        "totalNodes": {
          "type": "integer",
          "minimum": 0
        },
        "calendarNodes": {
          "type": "integer",
          "minimum": 0
        },
        "fields": {
          "type": "integer",
          "minimum": 0
        },
        "brokenRefs": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "nodes": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/TanaNode"
      },
      "minItems": 1
    }
  },
  "definitions": {
    "TanaNode": {
      "type": "object",
      "required": ["uid", "name", "created", "edited", "type"],
      "properties": {
        "uid": {
          "type": "string",
          "description": "Unique identifier for the node"
        },
        "name": {
          "type": "string",
          "description": "Display name of the node"
        },
        "description": {
          "type": "string",
          "description": "Optional description"
        },
        "created": {
          "type": "string",
          "format": "date-time",
          "description": "Creation timestamp in ISO 8601 format"
        },
        "edited": {
          "type": "string",
          "format": "date-time",
          "description": "Last edit timestamp in ISO 8601 format"
        },
        "type": {
          "type": "string",
          "enum": ["node", "date", "url", "codeblock", "field", "image"],
          "description": "Type of the node"
        },
        "mediaUrl": {
          "type": "string",
          "format": "uri",
          "description": "URL for media content (images, etc.)"
        },
        "todoState": {
          "type": "string",
          "enum": ["todo", "done"],
          "description": "Todo state if node is a task"
        },
        "refs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "References to other nodes or external resources"
        },
        "supertags": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/TanaSupertag"
          },
          "description": "Supertags applied to this node"
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/TanaNode"
          },
          "description": "Child nodes"
        }
      }
    },
    "TanaSupertag": {
      "type": "object",
      "required": ["uid"],
      "properties": {
        "uid": {
          "type": "string",
          "description": "Unique identifier for the supertag"
        },
        "name": {
          "type": "string",
          "description": "Display name of the supertag"
        }
      }
    }
  }
}